# Render Environment Variables Template
# Copy this to your Render dashboard environment variables

# Telegram Bot Configuration
TELEGRAM_BOT_TOKEN=your_bot_token_here
ADMIN_CHAT_ID=your_admin_telegram_id

# Database
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/tyangge247
# Alternative for Render MongoDB addon
MONGO_URL=mongodb+srv://username:password@cluster.mongodb.net/tyangge247

# Payment Processing
XENDIT_API_KEY=your_xendit_api_key

# Admin API
ADMIN_API_KEY=your_secure_admin_key_here

# Render Configuration (automatically set by Render)
RENDER_EXTERNAL_URL=https://your-app-name.onrender.com
RENDER_EXTERNAL_HOSTNAME=your-app-name.onrender.com
PORT=10000

# Dashboard Configuration
DASHBOARD_URL=https://your-dashboard-name.onrender.com
NEXT_PUBLIC_API_URL=https://your-app-name.onrender.com
NEXT_PUBLIC_ADMIN_KEY=your_secure_admin_key

# Optional - Development
NODE_ENV=production
